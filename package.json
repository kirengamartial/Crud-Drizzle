{
  "name": "nodejs-postgres-drizzle-api",
  "version": "1.0.0",
  "description": "CRUD API using Node.js, PostgreSQL, and Drizzle ORM",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "migrate": "drizzle-kit generate:pg",
    "db:push": "node src/db/migrate.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.0",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "drizzle-kit": "^0.19.13",
    "nodemon": "^3.0.1"
  }
}
